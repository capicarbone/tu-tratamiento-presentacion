
body
	background -webkit-radial-gradient(center, circle cover, #FFFFFF 0%, #C5C5C5 100%)

	#yo
		font-family "League Gothic", Impact, sans-serif
		position fixed
		bottom 3px
		right 0px
		width 400px
		height 40px						
		background: rgba(0,0,0,0);
		background: rgba(0,0,0,0);
		background: -moz-linear-gradient(left, rgba(0,0,0,0) 0%, rgba(0,0,0,0.14) 100%);
		background: -webkit-gradient(left top, right top, color-stop(0%, rgba(0,0,0,0)), color-stop(100%, rgba(0,0,0,0.14)));
		background: -webkit-linear-gradient(left, rgba(0,0,0,0) 0%, rgba(0,0,0,0.14) 100%);
		background: -o-linear-gradient(left, rgba(0,0,0,0) 0%, rgba(0,0,0,0.14) 100%);
		background: -ms-linear-gradient(left, rgba(0,0,0,0) 0%, rgba(0,0,0,0.14) 100%);
		background: linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,0.14) 100%);
		
		
			
		p
			font-family "Lato", sans-serif
			font-size 1.3rem
			margin 10px
			margin-right 30px
			text-align right



	.tu-tratamiento
		* 
			color #444444

		h1			
			text-shadow 0 1px 0 #808080, 0 2px 0 #555, 0 3px 0 #222, 0 4px 0 #131313, 0 5px 0 #7e7e7e, 0 6px 1px rgba(0, 0, 0, 0), 0 0 5px rgba(0,0,0,0.1), 0 1px 3px rgba(0,0,0,0.3), 0 3px 5px rgba(0,0,0,0.2), 0 5px 10px rgba(0,0,0,0.25), 0 20px 20px rgba(0, 0, 0, 0.39)

		blockquote
			background rgba(0, 0, 0, 0.06)

		img.no-box
			border 0
			box-shadow none
			margin-right 5%
			margin-top 5%
			background rgba(0,0,0,0)

		img.no-margin-top
			margin-top 0%

		.contacto
			margin 2%

			img
				width 5%
				margin 0%
				display inline-block
				border 0
				box-shadow none
			p
				display inline-block
				vertical-align top

		

